---
interface Props {
	id: string;
	title: string;
}

const { id, title} = Astro.props;
---

<article class="mt-4 mb-8 rounded-2xl md:border px-4 md:px-8 md:py-4 ">
	<header class="text-xl">
		<h1 id={id} class="text-2xl mt-8 md:my-4">{title}</h1>
	</header>
	<section class="pl-4 md:pl-0">
		<slot />
	</section>
</article>